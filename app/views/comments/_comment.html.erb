<div class="comment card ">
  <div class="card-header">
    <ul class="nav">
      <%if current_ip==comment.ip%>
        <li class="nav-item">
          <button type="button" class="delete-confirm-button nav-link text-reset" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal" data-url=<%= comment_path(comment)%> data-name="コメント">
            <i class="fa-solid fa-trash"></i>
          </button>
        </li>
        <li class="nav-item">
          <%= link_to edit_comment_path(comment), remote: true,class: "text-reset nav-item nav-link" do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
        </li>
      <%end%>
    </ul>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%=comment.nick_name%>
    </h5>
    <div class="card-text">
      <%=comment.content%>
    </div>
  </div>
</div>
