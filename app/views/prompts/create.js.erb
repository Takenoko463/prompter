const $offcanvasPromptForm=$('#offcanvasPromptForm');
const offcanvas = bootstrap.Offcanvas.getInstance($offcanvasPromptForm);
offcanvas.hide();
$offcanvasPromptForm.on({
            'hidden.bs.offcanvas': function() {
            $("<div>", {
                id: 'prompt<%= @prompt.id %>',
                class: "mb-3 px-2 container-sm"
                }).prependTo('.prompts');
                $("#prompt<%= @prompt.id %>").html("<%= j(render partial: "prompt", locals: { prompt: @prompt }) %>");
            }
            });

