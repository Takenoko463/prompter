<main class="mt-3 py-2">
  <div class="container-lg">
    <div class="col">
      <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasPromptForm" data-url= <%=new_prompt_path%> aria-controls="offcanvasPromptForm" id="promptFormButton">
        Button with data-bs-target
      </button>
      <h1 class="text-center  mt-2">プロンプト一覧</h1>
      <h2  class="text-center mb-2"><%= @current_category.name %></h2>
      <% if @prompts.present? %>
        <% @prompts.each do |prompt| %>
          <div class="mb-3 px-2 container-sm", id="prompt<%= prompt.id %>">
            <%= render partial: "prompts/prompt", locals: { prompt: prompt } %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">対象プロンプトは存在しません</p>
      <% end %>
      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasPromptForm" aria-labelledby="offcanvasPromptForm">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasPromptFormLabel">Prompt投稿</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="閉じる"></button>
        </div>
        <div class="offcanvas-body">
        </div>
      </div>
    </div>
  </div>
</main>